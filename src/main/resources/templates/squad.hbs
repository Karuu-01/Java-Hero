{{#partial "content"}}

    <h2>LIST OF SQUADS</h2>

    <div class="row">
        <div class="col-md-6">
            {{#if squad}}

                {{#each squad}}
                    <div class="card mb-3" id="user">
                        <div class="row no-gutters">
                            <div class="col-md-4" id="profile">
                                <img id="squadImage" src="Images/bat.jpg" alt="Squad Image">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">{{name}}</h5>
                                    <hr>
                                    <ul class="card-text">
                                        <li><span>Purpose: </span>{{purpose}}</li>
                                        <li><span>Maximum Heroes Allowed: </span>{{size}}</li>
                                    </ul>
                                    <a href="/squad/{{id}}"><button class="btn-info" id="heroView">View Squad Heroes</button></a>
                                </div>
                            </div>
                        </div>
                    </div>

                {{/each}}

            {{else}}
                <p id="noSquads">No Squads Available!</p>
            {{/if}}
        </div>

        <div class="col-md-6">
            {{#if squad}}
                <div class="card" id="squadHero">
                    <div class="card-body">
                        <h5 class="card-title">{{squad.name}} HEROES</h5>
                        <hr>

                        {{#if squad.hero}}

                            {{#each squad.hero}}
                            <h3>Name: {{name}}</h3>
                                <ul class="card-text">
                                    <li><span>Age: </span>{{age}}</li>
                                    <li><span>Special Power: </span>{{power}}</li>
                                    <li><span>Weakness: </span>{{weakness}}</li>
                                </ul>
                            <hr>
                            {{/each}}

                        {{else}}
                           <p id="noSquadsHeroes">No squad heroes available</p>
                        {{/if}}
                    </div>
                </div>
            {{/if}}
        </div>
    </div>

    {{#if squad}}
        <a href="/squad/delete"><button class="btn-info" id="delete">Delete All Squads</button></a>
    {{/if}}

{{/partial}}

{{> layout.hbs}}